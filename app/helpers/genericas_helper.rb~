module GenericasHelper
    def genealogia(label)
           
              
         if label.label_id.nil?
            return link_to('RaÃ­z',label_path(label))
        else
            padre=Label.find(label.label_id)
                       
            return link_to(genealogia(padre),label_path(padre)) +' > '+ link_to(padre.nombre,label_path(padre))            
            
            
        end
    end
 
end
