<%=form_for @museo do |f|%>
    <%=f.label :nombre,:class=>'label'%>
    <%=f.text_field :nombre%>
    <br/>
    <%=f.label "Descripcion Recursos Interpretativos",:class=>'label'%>
    <%=f.text_area :descripcion_ri,  :rows=>10%>
    <br/>
	    <%=f.label :imagen_ri,:class=>'label'%>
    <%if @museo.imagen_ri_url.to_s!='' %>
        <%=imagen_ritam(@museo,'64x64')%>
        <%= f.check_box :remove_imagen_ri %>
        Borrar imagen
    <%end%>
    <br/>
    <%= f.file_field :imagen_ri %> 
    <br/>
    <br/>
	
    <%=f.submit 'Guardar',:class=>'btn btn-success'%> o <%=link_to 'cancelar',museos_path%>
<%end%>

