<h1>Listado de etiquetas</h1>

<table class='table zebra-striped'>
<tr>
<th>Nombre</th>
<th>Etiquetas hijas</th>
<th>Acciones</th>
</tr>
<%@labels.each do |label|%>
    <tr>
    <td><%=label.nombre%></td>
    <td><%label.labels.each do |l|%>
     <%=l.nombre%>&nbsp;<%end%>
    </td>
    <td>
    <%= link_to 'Ver',label,:class=>'btn btn-success'%>
    <%= link_to 'Editar',edit_label_path(label),:class=>'btn btn-warning'%>
    <%= link_to 'Borrar',label_path(label,:index=>'true'),:method=>:delete,:confirm=>'¿Seguro que desea borrar la informacion?',:class=>'btn btn-danger'%>

    </td>
    </tr>
<%end%>
</table>
<%= link_to 'Añadir etiqueta',new_label_path,:class=>'btn'%>


