<%=form_for @generica,:html=>{:multipart=>true} do |f|%>
    <%=f.label :titulo,:class=>'label'%>
    <%=f.text_field :titulo%>
    <%=f.label :descripcion,:class=>'label'%>
    <%=f.text_area :descripcion,:size=>'30x10'%>
    <%=f.label :imagen,:class=>'label'%>
    
    <%if @generica.imagen_url.to_s!='' %>
        <%=imagentam(@generica,'64x64')%>
        <%= f.check_box :remove_imagen %>
        Borrar imagen
    <%end%>
    <br/>
    <%= f.file_field :imagen %>  
    <br/>

    <!-----------      Como hago yo reutilizble esto sin jaleo                     -------->

    <label class='label'>Etiquetas</label>
    <% for label in Label.find(:all) %>  
    <span>  
      <%= check_box_tag "generica[label_ids][]", label.id, @generica.labels.include?(label) %>  
      <%= label.nombre %>  
    </span>
     <% end %>  <br/>  
       
    <!-----El helper renderiza la vista , -------->
    <%=etiquetar @generica%>


    <!------------------------>

   
    <%=f.submit 'Guardar',:class=>'btn btn-success'%> o <%=link_to 'cancelar',genericas_path%>
<%end%>

